extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Category etc.' name='name' value=(undefined===category ? '' : category.name))
      if edit
        input#password(type="password", name="password", placeholder="Enter password to update")
    button.btn.btn-primary(type='submit') Save

  if errors 
    ul
      for error in errors
        li(class="err")!= error.msg