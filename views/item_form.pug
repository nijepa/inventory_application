extends layout

block content
  h1= title

  form(method='POST' action='' enctype="multipart/form-data")
    div.form-group
      label(for="image") Image:
      input#image.form-control(type="file", name="image", placeholder="Upload an image", value=(item ? item.image : ""))
    div.form-group
      label(for='Name') Name:
      input#name.form-control(type='text', placeholder='Name of item' name='name' required='true' value=(undefined===item ? '' : item.name) )
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Description' name='description' rows='3' required='true') #{undefined===item ? '' : item.description}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', placeholder='Price' name='price' value=(undefined===item ? '' : item.price) required='true') 
    div.form-group
      label(for='price') Number In Stock:
      input#numberInStock.form-control(type='number', placeholder='Number In Stock' name='numberInStock' value=(undefined===item ? '' : item.numberInStock) required='true') 
    div.form-group
      label Category:
      div
        for category in categories
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked )
            label(for=category._id) #{category.name}
      if edit
        input#password(type="password", name="password", placeholder="Enter password to update")
    button.btn.btn-primary(type='submit') Save

  if errors 
    ul
      for error in errors
        li(class="err")!= error.msg